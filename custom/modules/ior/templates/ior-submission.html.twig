<div class="row ior-submission ior-submission-full">
    <div class="col-md-12 col-lg-6 col-xl-8">
        {% if submission.field_image %}
            {% if submission.image_url %}
                <a href="{{ submission.image_url }}" target="_blank">{{ submission.field_image }}</a>
            {% else %}
                {{ submission.field_image }}
            {% endif %}
        {% else %}
            {{ submission.field_model_embed }}
        {% endif %}
    </div>
    <div class="col-md-12 col-lg-6 col-xl-4">
        <div class="submission-description">{{ submission.description }}</div>
        <div class="container overflow-hidden submission-meta">
            <div class="row gy-2">
                {% block submission_fields %}
                {% if submission.published or current_user.view_contestant_info %}
                    <div class="col-6 pl-0"><div class="pt-1 pb-1">Submitted by:</div></div>
                    <div class="col-6 pr-0"><div class="pt-1 pb-1">{{ submission.first_name }}{{ submission.last_name }}</div></div>
                    {% if current_user.view_contestant_info %}
                        <div class="col-6 pl-0"><div class="pt-1 pb-1">Email:</div></div>
                        <div class="col-6 pr-0"><div class="pt-1 pb-1">{{ submission.email }}</div></div>
                    {%  endif %}
                    <div class="col-6 pl-0"><div class="pt-1 pb-1">Department / Faculty: </div></div>
                    <div class="col-6 pr-0"><div class="pt-1 pb-1">{{ submission.department }}</div></div>
                    {% if submission.website %}
                        <div class="col-6 pl-0"><div class="pt-1 pb-1">Research URL: </div></div>
                        <div class="col-6 pr-0"><div class="pt-1 pb-1">{{ submission.website }}</div></div>
                    {% endif %}
                    {% if submission.field_model %}
                        <div class="col-6 pl-0"><div class="pt-1 pb-1">Model: </div></div>
                        <div class="col-6 pr-0"><div class="pt-1 pb-1">{{ submission.field_model }}</div></div>
                    {% endif %}
                {% endif %}
                {% if submission.state %}
                    {{ attach_library('ior/ior') }}
                    <div class="col-6 pl-0"><div class="pt-1 pb-1">State: </div></div>
                    <div class="col-6 pr-0">
                        <div class="pt-1 pb-1">
                            <span class="badge moderation-{{ submission.state.id }} p-2">{{ submission.state.label }}</span>
                        </div>
                    </div>
                {% endif %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
