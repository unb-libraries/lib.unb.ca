<div class="row mb-4">
    <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 order-first order-sm-last">
        <div>
            {% if portolan_record.cover_uri %}
                <img src="{{ portolan_record.cover_uri.value }}">
            {% endif %}
        </div>
    </div>
    <div class="col-sm-6 col-md-8 col-lg-9 col-xl-10 order-last order-sm-first">
        <a class="h3" href="/clc/portolan/records/{{ portolan_record.oclc_id.value }}">{{ portolan_record.title.value }}</a>
        <div class="text-muted small">by {% for author in portolan_record.author %}<span class="portolan-author">{{ author.value }}</span>{% if not loop.last %}; {% endif %}{% endfor %}</div>
        <div>{{ search_api_excerpt|raw }}</div>
    </div>
</div>